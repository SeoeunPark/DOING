<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".EditUserPage">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/side_margin600"
        android:layout_marginTop="224dp"
        android:text="개인정보 수정"
        android:textColor="@color/colorMain"
        android:textSize="@dimen/title600"
        android:fontFamily="@font/cafe24surround"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlHardcoded,RtlSymmetry,SpUsage" />

    <LinearLayout
        android:id="@+id/linear_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/side_margin600"
        android:layout_marginRight="@dimen/side_margin600"
        android:gravity="center_horizontal"
        android:orientation="vertical"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.362"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintVertical_bias="0.25">

        <TextView
            android:id="@+id/edit_nickname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/side_margin"
            android:layout_marginRight="@dimen/side_margin"
            android:background="@drawable/text_button"
            android:padding="@dimen/padding600"
            android:fontFamily="@font/cafe24ssurroundair"
            android:text="이름 변경하기"
            android:textColor="@color/black"
            android:textCursorDrawable="@color/colorMain"
            android:textSize="@dimen/l_text600"
            tools:ignore="SpUsage" />

        <!--글자수 제한두어야 함-->
        <TextView
            android:id="@+id/edit_about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/side_margin"
            android:layout_marginRight="@dimen/side_margin"
            android:background="@drawable/text_button"
            android:padding="@dimen/padding600"
            android:fontFamily="@font/cafe24ssurroundair"
            android:text="한 줄 소개 변경하기"
            android:textColor="@color/black"
            android:textSize="@dimen/l_text600"
            tools:ignore="SpUsage" />

        <LinearLayout
            android:id="@+id/copy_my_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/text_button"
            android:padding="@dimen/padding600">

            <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/side_margin"
            android:layout_marginRight="@dimen/side_margin"
                android:layout_marginBottom="@dimen/side_margin"
            android:text="내 친구 코드 복사하기"
                android:fontFamily="@font/cafe24ssurroundair"
            android:textColor="@color/black"
            android:textSize="@dimen/l_text600"
            tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/copy_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="코드"
                android:layout_marginLeft="@dimen/side_margin"
                android:textColor="@color/gray"
                android:fontFamily="@font/cafe24ssurroundair"
                android:textSize="@dimen/m_text600" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/copy_my_link"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/text_button"
            android:padding="@dimen/padding600">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/side_margin"
                android:layout_marginRight="@dimen/side_margin"
                android:layout_marginBottom="@dimen/side_margin"
                android:text="프로필 링크 복사하기"
                android:fontFamily="@font/cafe24ssurroundair"
                android:textColor="@color/black"
                android:textSize="@dimen/l_text600"
                tools:ignore="SpUsage" />

            <TextView
                android:id="@+id/copy_link"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="링크"
                android:layout_marginLeft="@dimen/side_margin"
                android:textColor="@color/gray"
                android:fontFamily="@font/cafe24ssurroundair"
                android:textSize="@dimen/m_text600" />

        </LinearLayout>

        <TextView
            android:id="@+id/logout_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/side_margin"
            android:layout_marginRight="@dimen/side_margin"
            android:padding="@dimen/padding600"
            android:text="로그아웃"
            android:textColor="@color/black"
            android:fontFamily="@font/cafe24ssurroundair"
            android:textSize="@dimen/l_text600"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linear_nickname"
            app:layout_constraintVertical_bias="0.35"
            tools:ignore="SpUsage" />
<!--
        <Button
            android:id="@+id/edit_save"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_margin="50dp"
            android:background="@drawable/login_button_style"
            android:text="저장"
            android:textColor="@color/white"
            android:textSize="@dimen/button600"
            tools:ignore="RtlSymmetry,SpUsage" />
    -->
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>