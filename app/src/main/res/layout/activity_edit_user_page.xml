<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditUserPage">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/side_margin600"
        android:layout_marginTop="244dp"
        android:text="개인정보 수정"
        android:textColor="@color/colorMain"
        android:textSize="@dimen/title600"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlHardcoded,RtlSymmetry,SpUsage" />

    <LinearLayout
        android:id="@+id/linear_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <EditText
            android:id="@+id/edit_nickname"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding600"
            android:backgroundTint="@color/colorMain"
            android:textAlignment="center"
            android:hint="이름 변경하기"
            android:textColor="@color/black"
            android:textSize="@dimen/l_text600"
            tools:ignore="SpUsage"
            android:gravity="center_horizontal" />

        <!--글자수 제한두어야 함-->
        <EditText
            android:id="@+id/edit_about"
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/padding600"
            android:backgroundTint="@color/colorMain"
            android:hint="한줄 소개 변경하기"
            android:textAlignment="center"
            android:textSize="@dimen/l_text600"
            tools:ignore="SpUsage"
            android:gravity="center_horizontal" />

        <Button
            android:id="@+id/edit_save"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_margin="100dp"
            android:background="@drawable/login_button_style"
            android:text="저장"
            android:textColor="@color/white"
            android:textSize="@dimen/button600"
            tools:ignore="RtlSymmetry,SpUsage" />
    </LinearLayout>

    <TextView
        android:id="@+id/logout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding600"
        android:text="로그아웃"
        android:textColor="@color/colorMain"
        android:textSize="@dimen/m_text600"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linear_nickname"
        app:layout_constraintVertical_bias="0.35"
        tools:ignore="SpUsage" />

</androidx.constraintlayout.widget.ConstraintLayout>